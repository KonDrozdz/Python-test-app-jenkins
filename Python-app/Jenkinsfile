pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                checkout([
                    $class: 'GitSCM', 
                    branches: [[name: '*/main']],
                    userRemoteConfigs: [[url: 'https://github.com/KonDrozdz/Python-test-app-jenkins.git']]
                ])
            }
        }
        
        stage('Setup Python') {
            steps {
                script {
                    // Sprawdź czy Python jest dostępny w systemie Jenkinsa
                    def pythonPath = tool name: 'python3', type: 'python'
                    env.PATH = "${pythonPath}/bin:${env.PATH}"
                }
                sh 'python --version'
            }
        }
        
        stage('Install & Test') {
            steps {
                sh '''
                    python -m pip install --user -r requirements.txt
                    python -m pytest tests/ --junitxml=test-results.xml
                '''
            }
            post {
                always {
                    junit 'test-results.xml'
                }
            }
        }
    }
}
