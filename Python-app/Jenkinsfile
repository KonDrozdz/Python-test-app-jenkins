pipeline {
    agent {
        docker {
            image 'python:3.9-slim'
            args '--user root' 
        }
    }
    
    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/KonDrozdz/Python-test-app-jenkins.git', 
                     branch: 'main'
            }
        }
        
        stage('Test') {
            steps {
                sh '''
                    python --version
                    pip install -r requirements.txt
                    pytest tests/ --junitxml=test-results.xml
                '''
            }
            post {
                always {
                    junit 'test-results.xml'
                }
            }
        }
    }
}
