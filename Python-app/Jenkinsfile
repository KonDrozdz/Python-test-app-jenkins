pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/KonDrozdz/Python-test-app-jenkins.git'
            }
        }
        
        stage('Test') {
            steps {
                sh 'python -m pytest tests/'
            }
        }
        
        stage('Build Docker') {
            steps {
                sh 'docker build -t python-app .'
            }
        }
    }
    
    post {
        always {
            junit '**/test-results.xml'
        }
    }
}
