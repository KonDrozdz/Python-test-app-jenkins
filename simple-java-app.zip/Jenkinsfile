pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/KonDrozdz/Python-test-app-jenkins.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean compile'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
                junit 'target/surefire-reports/*.xml'
            }
        }

        stage('Package') {
            steps {
                sh 'mvn package'
                archiveArtifacts 'target/*.jar'
            }
        }
    }

    post {
        always {
            echo 'Pipeline zako≈Ñczony'
        }
    }
}
